# NeuroQO Environment Configuration
# Copy this to .env and update values

# Application
APP_NAME=NeuroQO
APP_VERSION=1.0.0
DEBUG=true
HOST=127.0.0.1
PORT=8000

# Main Database (where NeuroQO stores its data)
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=neuroqo

# Target Database (the database you want to optimize)
TARGET_DB_HOST=localhost
TARGET_DB_PORT=5432
TARGET_DB_USER=postgres
TARGET_DB_PASSWORD=your_password_here
TARGET_DB_NAME=target_db

# Security
SECRET_KEY=change-this-to-a-secure-random-string-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ML Model Settings
MODEL_PATH=models/
MODEL_RETRAIN_THRESHOLD=100
SLOW_QUERY_THRESHOLD_MS=1000.0

# Query Analysis Settings
QUERY_LOG_RETENTION_DAYS=30
MAX_RECOMMENDATIONS_PER_QUERY=5

# Cache Settings
CACHE_TTL_SECONDS=3600
ENABLE_QUERY_CACHE=true

# API Settings
API_PREFIX=/api/v1
CORS_ORIGINS=*
